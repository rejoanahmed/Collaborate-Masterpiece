{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "app/*": ["app/*"],
      "lib/*": ["lib/*"],
      "hooks/*": ["hooks/*"],
      "context/*": ["context/*"],
      "@borrowed/*": ["borrowed/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/layout.tsx",
    "pages/pub-sub.old",
    "pages/index.old",
    "app/page.tsx.old",
    "app/pub-sub/pubsub-client.tsx.old"
  ],
  "exclude": ["node_modules"]
}
